{
  "name": "editor-demo",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "pnpm --filter @editor-demo/frontend dev",
    "dev:backend": "pnpm --filter @editor-demo/backend dev",
    "dev:all": "pnpm --parallel --filter './packages/*' dev",
    "build": "pnpm --filter @editor-demo/frontend build",
    "build:backend": "pnpm --filter @editor-demo/backend build",
    "start:backend": "pnpm --filter @editor-demo/backend start"
  },
  "devDependencies": {
    "typescript": "~5.9.3"
  },
  "pnpm": {
    "overrides": {
      "vite": "npm:rolldown-vite@7.2.5"
    }
  },
  "dependencies": {
    "@arco-design/web-vue": "2.56.3",
    "@tiptap/extension-table": "^3.11.0",
    "@tiptap/extension-table-cell": "^3.11.0",
    "@tiptap/extension-table-header": "^3.11.0",
    "@tiptap/extension-table-row": "^3.11.0"
  }
}